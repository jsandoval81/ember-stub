
<div class="row search-form">
    <div class="col-md-12 text-center">
        <h2>Search inventory</h2>
    </div>
    <div class="col-md-6 col-md-offset-3">
        {{input type="text" value=searchText class="form-control" placeholder="search..."}}
    </div>
    <div class="col-md-1">
        <button id="inventory-search" class="btn btn-primary" {{action "searchInventory" this}}>Search</button>
    </div>
</div>

<div class="row">
    <ul>
        {{#each product in model}}
            <li>
                {{#link-to 'product' product}}
                    {{product.title}}
                {{/link-to}} - {{product.quantity}}
            </li>
        {{/each}}
    </ul>
</div>
